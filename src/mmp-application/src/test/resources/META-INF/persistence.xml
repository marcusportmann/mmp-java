<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  <persistence-unit name="Application" transaction-type="JTA">
    <jta-data-source>java:app/jdbc/ApplicationDataSource</jta-data-source>

    <class>guru.mmp.application.tests.TestData</class>

    <properties>
      <property name="hibernate.show_sql" value="no" />
      <property name="openjpa.jdbc.SynchronizeMappings" value="validate"/>
    </properties>
  </persistence-unit>
</persistence>

