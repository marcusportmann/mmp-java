<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
  <persistence-unit name="Customer" transaction-type="JTA">
    <jta-data-source>java:app/jdbc/ApplicationDataSource</jta-data-source>

    <!-- Application Framework Entities -->
    <class>guru.mmp.application.security.Organisation</class>
    <class>guru.mmp.application.customer.Customer</class>
    <class>guru.mmp.application.customer.CustomerAddress</class>

    <properties>
      <property name="hibernate.show_sql" value="no" />
      <property name="openjpa.jdbc.SynchronizeMappings" value="validate"/>
    </properties>
  </persistence-unit>
</persistence>